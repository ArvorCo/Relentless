{
  "name": "@arvorco/relentless",
  "version": "0.4.4",
  "description": "Universal AI agent orchestrator - works with Claude Code, Amp, OpenCode, Codex, Droid, and Gemini",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "relentless": "bin/relentless.ts"
  },
  "scripts": {
    "start": "bun run bin/relentless.ts",
    "build": "bun build ./bin/relentless.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src bin --ext .ts",
    "test": "bun test"
  },
  "dependencies": {
    "@arvorco/relentless": "^0.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "figures": "^6.0.0",
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "js-yaml": "^4.1.1",
    "react": "^18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "globals": "^17.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "ai",
    "agent",
    "orchestrator",
    "claude",
    "amp",
    "codex",
    "gemini",
    "opencode",
    "droid",
    "ralph-wiggum"
  ],
  "author": "Arvor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArvorCo/Relentless.git"
  },
  "homepage": "https://github.com/ArvorCo/Relentless#readme",
  "bugs": {
    "url": "https://github.com/ArvorCo/Relentless/issues"
  }
}
